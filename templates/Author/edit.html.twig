{% extends 'base.html.twig' %}

{% block body %}
    <h1>Edit Author</h1>
    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.username) }}
            {{ form_widget(form.username) }}
            {{ form_errors(form.username) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
            {{ form_errors(form.email) }}
        </div>
        <div class="mb-3">
            {{ form_widget(form.save) }}
        </div>
    {{ form_end(form) }}
{% endblock %}